      <groupId>com.tinkerpop</groupId>
      <artifactId>pipes</artifactId>
      <version>0.4</version>
    </dependency>
     <dependency>
      <groupId>org.codehaus.groovy</groupId>
      <artifactId>groovy</artifactId>
